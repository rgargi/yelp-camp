<% include ../partials/header %>

<div class = "container">
    <h1 class="center">Edit Comment</h1>
    
    <div class="comment-form">
        <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <input class="form-group form-control" type="text" name="comment[text]" value="<%=comment.text%>">
            <button class="form-group btn btn-primary btn-block">Submit!</button>
        </form>
        <p class="comment-form"><a href="/campgrounds">Back to Camps</a></p>
    </div>
</div>

