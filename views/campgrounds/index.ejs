<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our handpicked campgrounds from all over the world!</p>
            <a class ="btn btn-primary btn-lg" href="/campgrounds/new">Add a New Campground</a>
        </div>
    </header>
    
    <div class="row" style="display:flex; flex-wrap: wrap;">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
        
         <% campgrounds.forEach(function(camps){ %>
        <div class="col-md-3 col-sm-6">
            <div class ="thumbnail">
                <img src= "<%=camps.image%>">
                <div class = "caption">
                    <h4><%=camps.name %></h4>
                    <p><a href="/campgrounds/<%=camps._id%>" class="btn btn-primary btn-xs">More Info</a></p>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
